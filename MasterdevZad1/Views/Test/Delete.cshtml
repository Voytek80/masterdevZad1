@model Klienci

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Usuń</h2>
            <hr />
        </div>
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="PESEL"></label>
            <input asp-for="PESEL" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Usuń</button>
        <a asp-controller="Test" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Powrót
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}





@model IEnumerable<Klienci>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista klientów</h2>
        </div>
        <div  class="col-6 text-end w-75 btn-group" role="group">
            <div>
            <a asp-controller="Test" asp-action="Create" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Dodaj klienta
            </a>
            </div>
            <div>
            <a asp-controller="Test" asp-action="Import" class="btn btn-primary mx-2">
                <i class="bi bi-arrow-down"></i> &nbsp;
                Importuj
            </a>
            </div>
            <div>
            <a asp-controller="Test" asp-action="Export" class="btn btn-primary mx-2">
                <i class="bi bi-arrow-up"></i> &nbsp;
                Eksportuj
            </a>
            </div>
        </div>
    </div>
    <br/><br/>




<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                PESEL
            </th>
            <th>
                Rok urodzenia
            </th>
            <th>
                Płeć
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Surname
                </td>
                <td>
                    @obj.PESEL
                </td>
                <td>
                    @obj.BirthYear
                </td>
                <td>
                    @obj.Płeć
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Test" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edycja</a>
                        <a asp-controller="Test" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>


